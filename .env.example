# ==========================================
# Configuración de MongoDB
# ==========================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme123
MONGO_DATABASE=peliculas_db
MONGO_PORT=27017

# ==========================================
# Configuración del Backend
# ==========================================
NODE_ENV=development
BACKEND_PORT=3001

# API
API_VERSION=v1
API_PREFIX=/api/v1

# Seguridad (CAMBIAR EN PRODUCCIÓN)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=30d

# CORS - Permitir solicitudes desde el frontend
CORS_ORIGIN=http://localhost:3000

# Límites
MAX_FILE_SIZE=10mb
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15

# ==========================================
# Configuración del Frontend
# ==========================================
FRONTEND_PORT=3000

# Variables de entorno del frontend (usadas en build)
REACT_APP_API_URL=http://localhost:3001/api/v1
REACT_APP_NAME=Sistema de Gestión de Películas y Series
REACT_APP_VERSION=1.0.0

# ==========================================
# Configuración Opcional - TMDB API
# ==========================================
# Si usas The Movie Database API, descomenta y configura:
# REACT_APP_TMDB_BASE_URL=https://api.themoviedb.org/3
# REACT_APP_TMDB_ACCESS_TOKEN=tu_token_de_tmdb_aqui
